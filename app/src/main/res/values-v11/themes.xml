<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="Theme.MyTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="colorPrimary">@color/color_theme</item>
                <item name="colorPrimaryDark">@color/color_theme_dark</item>
                <!--
                        <item name="colorControlActivated">@color/color_theme_dark</item>-->
                <item name="colorAccent">@color/color_accent</item>
                <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        </style>
        <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
